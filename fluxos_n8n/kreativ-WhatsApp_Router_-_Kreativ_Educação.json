    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT COALESCE(s.attendance_status, 'new') as attendance_status, COALESCE(s.current_module, 0) as current_module\nFROM (SELECT 1) t\nLEFT JOIN students s ON (\n  s.phone = '{{ $json.phone }}'\n  OR (length('{{ $json.phone }}') = 12 AND s.phone = concat(left('{{ $json.phone }}', 4), '9', right('{{ $json.phone }}', 8)))\n  OR (length('{{ $json.phone }}') = 13 AND s.phone = concat(left('{{ $json.phone }}', 4), right('{{ $json.phone }}', 8)))\n)\nLIMIT 1",
        "options": {}
      },
      "id": "n-db",
      "name": "Buscar estado do usuário",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.6,
      "position": [
        912,
        304
      ],
      "credentials": {
        "postgres": {
          "id": "lJaeEy4CpHbhgMAp",
          "name": "Kreativ PostgreSQL"
        }
      },
      "continueOnFail": true
    },
    {
      "parameters": {
        "jsCode": "const rawPhone = $('Extrair dados').item.json.phone;\nconst message = ($('Extrair dados').item.json.message || '').trim().toUpperCase();\nconst pushName = $('Extrair dados').item.json.pushName;\nconst originalPayload = $('Extrair dados').item.json.originalPayload;\n\n// Normalize Brazilian phone: both 12-digit (old) and 13-digit (new +9) formats\n// Use rawPhone as-is since DB now stores normalized format\nconst phone = rawPhone;\n\n// Keywords that ALWAYS route to BuilderBot regardless of student state\nconst BUILDERBOT_KEYWORDS = [\n  'MODULO', 'MÓDULO', 'INICIAR', 'CONTINUAR', 'RETOMAR',\n  'MENU', 'INICIO', 'INÍCIO', 'OI', 'OLÁ', 'OLA', 'COMEÇAR', 'COMECAR',\n  'AJUDA', 'HELP', 'QUIZ', 'AVALIAÇÃO', 'AVALIACAO',\n  'TUTOR', 'SUPORTE', 'PARAR', 'STOP', 'PAUSAR'\n];\n\nlet route = 'deepseek'; // default: free chat via AI\n\ntry {\n  const rows = $input.all();\n  const dbRow = rows[0]?.json;\n\n  if (dbRow && dbRow.attendance_status !== undefined) {\n    const status = dbRow.attendance_status;\n    const mod = parseInt(String(dbRow.current_module ?? '0'), 10);\n\n    if (status === 'human') {\n      route = 'paused'; // human tutor attending, bot stays silent\n    } else if (BUILDERBOT_KEYWORDS.includes(message)) {\n      route = 'builderbot'; // structured command → always BuilderBot\n    } else if (mod > 0) {\n      route = 'builderbot'; // student in active module → BuilderBot\n    }\n    // mod=0 and free message → deepseek (welcome / free chat)\n  }\n} catch(e) {\n  // DB error → fallback deepseek\n}\n\nreturn [{ json: { phone, message, pushName, originalPayload, route } }];"
      },
